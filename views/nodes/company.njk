{% extends "layouts/default.njk" %}

{% block mainContent %}

    {% if companyData %}
        <section class="section about__section about--black" id="about-block">
            <div class="container">
                <h1 class="about__title about__title--main">{{ companyData.name }}</h1>
                {% if companyData.subtitle %}
                    <div class="about__subtitle">{{ companyData.subtitle }}</div>
                {% endif %}
                
                <ul class="about__info">
                    <li class="about__info--list"><span class="about__info--number">{{ companyData.area }}</span><span class="about__info--text">м² площадей</span></li>
                    <li class="about__info--list"><span class="about__info--number">{{ companyData.visitors }}</span><span class="about__info--text about__info--lg">посетителей каждый день</span></li>
                    <li class="about__info--list"><span class="about__info--number">{{ companyData.residents }}</span><span class="about__info--text about__info--md">резидентов</span></li>
                </ul>
                {% if companyInfo and companyInfo.address %}
                    <div class="about__info--address">{{ companyInfo.address }}</div>
                {% endif %}
                
            </div>
        </section>
    {% endif %}
    
    {% if logistics and logistics|length > 0 %}
        <section class="section about__section" id="about-logistics">
            <div class="container flex flex--sb flex--center about__title--logistics">
                <h2 class="about--black about__title">Особое предложение</h2>
                <span class="about__logo--standard">
                    {% set includeIcon = 'depoLogistics' %}
                    {% include "includes/svg.njk" %}
                </span>
            </div>
            <div class="container--fixed">
                <div class="about__subtitle--styling flex flex--sb flex--center">
                    <h3 class="about--black about__subtitle about__subtitle--custom">Курьерская служба для вашего бизнеса</h3>
                    <span class="about__carIcon">
                        {% set includeIcon = 'carIcon' %}
                        {% include "includes/svg.njk" %}
                    </span>
                    <span class="about__logo--yellow">
                        {% set includeIcon = 'depoLogisticsYellow' %}
                        {% include "includes/svg.njk" %}
                    </span>
                </div>
                <div class="about__container flex">
                    <div class="about__container--left"> 
                        <ul>
                            {% for item in logistics %}
                                <li class="about__item about__item--{{ item.id }}">{{ item.title }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="about__container--right">
                        <div class="about__logistics">
                            <span class="about__logistics--location">
                                {% set includeIcon = 'locImg' %}
                                {% include "includes/svg.njk" %}
                            </span>
                            <a href="{{ contacts.phone.link }}" class="about__logistics--call">
                                {% set includeIcon = 'phoneIcon' %}
                                {% include "includes/svg.njk" %}
                            </a>
                        </div>
                        <ul class="about__list">
                            {% for item in logistics %}
                                <li class="about__icon about__icon--{{ item.id }}">
                                    {% set includeIcon = item.iconId %}
                                    {% include "includes/svg.njk" %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    <section class="section about__section--black">
        <div class="container">
            <h2 class="about__title about__advantages--title">Превосходная инфраструктура</h2>
        </div>
            <ul class="about__advantages flex flex--sb">
                {% for item in advantages %}
                    <li class="about__advantages--item">
                        <div class="about__advantages--icon">
                            {% set includeIcon = item.iconId %}
                            {% include "includes/svg.njk" %}
                        </div>
                        <p class="about__advantages--subtitle about__advantages--{{ item.id }}">{{ item.title }}</p>
                        <p class="about__advantages--text">{{ item.text }}</p>
                    </li>
                {% endfor %}
            </ul>
            <a href="/search" class="button button--large about__advantages--button">Подобрать помещение</a>
    </section>

    <section class="section about__section">
        <div class="container">
            <h2 class="about--black about__title about__manager--title">{{ companyData.managerTitle }}</h2>
            <div data-react-component="manager"></div>
        </div>
    </section>

    <section class="section about__section">
        <div class="container">
            <h2 class="about--black about__title about__manager--title">Наши арендаторы</h2>
            <div data-react-component="tenants"></div>
        </div>
    </section>

    <section class="section section__shadow-2" id="contact-form">
        <div class="container">
            <h2>Поможем подобрать помещение</h2>

            <div class="contact__content">
                <div data-react-component="contactForm"></div>
            </div>
            <p class="about__subtitle about__subtitle--form">* доступно строительство под заказ</p>
        </div>
    </section>

{% endblock %}