<section class="section cards" id="cards">
    <div class="container container__base">
        <h2 class="section__title">
            <span class="section__title--text">Latest works</span>
        </h2>
    </div>
    <div class="container container__wide">
        <ul class="cards__list">
            {% for item in projects %}
                <li class="cards__item cards__item--{{ item.id }}">
                    <div class="cards__wrapper">
                        <div class="cards__cover">
                            <a href="{{ item.link }}" class="cards__cover--link" aria-label="Link to project">
                                <picture class="cards__cover--picture">
                                    <img class="cards__cover--img" src="{{ item.cover }}" data-src="{{ item.cover }}" width="{{ item.width }}" height="330" alt="{{ item.title }}">
                                </picture>
                            </a>
                        </div>
                        <div class="cards__text">
                            <div class="cards__title">{{ item.title }}</div>
                            <div class="cards__summary">{{ item.summary }}</div>
                        </div>
                        <a href="{{ item.link }}" class="cards__button button" aria-label="Link to project"></a>
                    </div>
                </li>
            {% endfor %}
            
            <li class="cards__item cards__item--button">
                <div class="cards__wrapper">
                    <button class="cards__start">
                        Start a project!
                    </button>
                </div>
            </li>
        </ul>
    </div>
</section>